doctype html
mixin item(title, url)
  li(class='li-item')
    a(href=url class=`item ${url===path?'active':''}`)=title

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
  body
    nav
      ul 
        +item('Strona Główna','/')
        +item('Aktualności','/news')
        +item('Quiz','/quiz')
        +item('Admin','/admin')
    block main
