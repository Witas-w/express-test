extends layout

block main
  h1= title
  form(method='post')
    p Jaka jest twoja ulubiona pora roku?
    if show
      ul 
        each item in data 
          li 
            label=item.title 
            input(type='radio' name='quiz' value=item._id)
      input(type='submit' value='Zagłosuj')
      h6 aby zobaczyć wyniki oddaj głos
    else 
      h1 Dokonałeś głosu w ankiecie
      p wyniki
      ul
        each item in data
          li #{item.title} głosów: #{item.vote} (#{Math.floor((item.vote/sum*100))}%)
      h5 głosów oddano #{sum}


